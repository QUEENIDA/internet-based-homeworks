	<h1>Input Types</h1>

    <form>

	<input type="hidden" name="id" value="0010"><br>

	<label>Phone Number:</label><br>
	<input type="tel" id="phone" name="phone" placeholder="(501) 333-5522"><br>

	<label>Email Address:</label><br>
	<input type="email" id="email" name="email" placeholder="jamesbonds@example.com"><br>

	<label>Quantity:</label><br>
	<input type="number" id="quantity" name="quantity" min="1" max="100" value="1"><br>

	<label>marks:</label><br>
	<input type="range" id="marks" name="marks" min="0" max="100" step="0.01" value="50"><br>

	<label>Search:</label><br>
	<input type="search" id="search" name="search" placeholder="Search..."><br>

	<label>Choose a picture:</label><br>
	<input type="image" id="picture" src="picture.png" alt="Picture"><br>

	<label>Select a week:</label><br>
	<input type="week" id="week" name="week"><br>

	<label>Enter a URL:</label><br>
	<input type="url" id="url" name="url" placeholder="https://example.com"><br>

	<label>date and time:</label><br>
	<input type="datetime-local" id="datetime" name="datetime"><br>

	<label>Select a month:</label><br>
	<input type="month" id="month" name="month"><br>

	<label>Select a time:</label><br>
	<input type="time" id="time" name="time"><br>

    <input type="submit" value="submit form">
    </form>

